  VIAddVersionKey /LANG=${LANG_SimpChinese} "FileVersion" "3.0.0"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "ProductVersion" "0.3.0.0"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "Comments" "NIIEngine"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "InternalName" "NIIEngine"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "OriginalFilename" "NIIEngine"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "PrivateBuild" "NIIEngine"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "SpecialBuild" "NIIEngine"
;----------------------------------------------------------------------------------------
;总名字
Name "${PRODUCT_PUBLISHER}"
;exe名字
OutFile "NIIEngineSetup.exe"
;默认安装路径
InstallDir "$PROGRAMFILES\NIIEngine"
;输出细节
ShowInstDetails show
ShowUnInstDetails show
;安装截面颜色
BGGradient 000000 800000 FFFFFF
InstallColors FF8080 000030
;window xp 样式
XPStyle on
;运行需要的系统操作等级
RequestExecutionLevel admin

