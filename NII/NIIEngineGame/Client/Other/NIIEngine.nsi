;----------------------------------------------------------------------------------------
; 协议的语言版本
LicenseLangString myLicenseData ${LANG_ENGLISH} "Licsence_ENGLISH.txt"
LicenseLangString myLicenseData ${LANG_DUTCH} "Licsence_DUTCH.txt"
LicenseLangString myLicenseData ${LANG_FRENCH} "Licsence_FRENCH.txt"
LicenseLangString myLicenseData ${LANG_GERMAN} "Licsence_GERMAN.txt"
LicenseLangString myLicenseData ${LANG_KOREAN} "Licsence_KOREAN.txt"
LicenseLangString myLicenseData ${LANG_RUSSIAN} "Licsence_RUSSIAN.txt"
LicenseLangString myLicenseData ${LANG_SPANISH} "Licsence_SPANISH.txt"
LicenseLangString myLicenseData ${LANG_SWEDISH} "Licsence_SWEDISH.txt"
LicenseLangString myLicenseData ${LANG_TRADCHINESE} "Licsence_TRADCHINESE.txt"
LicenseLangString myLicenseData ${LANG_SIMPCHINESE} "Licsence_SIMPCHINESE.txt"
LicenseLangString myLicenseData ${LANG_SLOVAK} "Licsence_SLOVAK.txt"

LicenseData $(myLicenseData)

;版本信息
  VIProductVersion "0.3.0.0"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "ProductName" "NIIEngine"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "CompanyName" "深圳闽登科技有限公司"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "LegalTrademarks" "商业授权"
  VIAddVersionKey /LANG=${LANG_SimpChinese} "LegalCopyright" "深圳闽登科技有限公司"
